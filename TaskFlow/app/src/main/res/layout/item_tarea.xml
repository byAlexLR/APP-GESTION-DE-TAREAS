<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_mint"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTareaTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Reunión de equipo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cardArrow"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvTareaFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="15 Oct 2023 · 10:00 AM"
            android:textSize="14sp"
            android:textColor="#616161"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/tvTareaTitulo"
            app:layout_constraintTop_toBottomOf="@id/tvTareaTitulo"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardArrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#00897B"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgArrowIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                android:layout_gravity="center"
                app:tint="@color/white"
                android:contentDescription="@string/desc_expandir_detalles"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/layoutDetallesHidden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTareaFecha"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_descripcion"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescripcionBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#455A64"
                android:textSize="14sp"
                tools:text="Descripción detallada de la tarea." />

            <TextView
                android:id="@+id/lblUbicacionItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/lbl_ubicacion"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUbicacionBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#455A64"
                android:textSize="14sp"
                tools:text="Oficina TaskFlow" />

            <TextView
                android:id="@+id/lblMultimediaItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/lbl_multimedia"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/scrollMultimedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAdjuntoImagen"
                        android:layout_width="118dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F1F8E9"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:id="@+id/tvNombreImagen"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="14dp"
                            android:text="@string/imagen"
                            android:textSize="13sp"
                            android:textColor="#1B5E20"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textStyle="bold"
                            app:drawableStartCompat="@android:drawable/ic_menu_gallery"
                            app:drawableTint="#2E7D32"
                            android:drawablePadding="10dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAdjuntoVideo"
                        android:layout_width="118dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#E3F2FD"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:id="@+id/tvNombreVideo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="14dp"
                            android:text="@string/video"
                            android:textSize="13sp"
                            android:textColor="#0D47A1"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textStyle="bold"
                            app:drawableStartCompat="@android:drawable/ic_media_play"
                            app:drawableTint="#1565C0"
                            android:drawablePadding="10dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardAdjuntoAudio"
                        android:layout_width="118dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#FFF3E0"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:id="@+id/tvNombreAudio"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="14dp"
                            android:text="@string/audio"
                            android:textSize="13sp"
                            android:textColor="#BF360C"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textStyle="bold"
                            app:drawableStartCompat="@android:drawable/ic_btn_speak_now"
                            app:drawableTint="#EF6C00"
                            android:drawablePadding="10dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/lblColaboradoresItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/lbl_colaboradores"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvColaboradoresBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#455A64"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="Colaboradores" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnEditar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@string/desc_editar_tarea"
                    android:focusable="true"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#263238" />

                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" />

                <ImageView
                    android:id="@+id/btnCompartir"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@string/desc_compartir_tarea"
                    android:focusable="true"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_share"
                    app:tint="#263238" />

                <ImageView
                    android:id="@+id/btnMenuOpciones"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:contentDescription="@string/desc_opciones_tarea"
                    android:focusable="true"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_more"
                    app:tint="#263238" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>