<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTituloPantalla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crear_nueva_tarea"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_mint"
            android:padding="20dp">

            <TextView
                android:id="@+id/lblNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_nombre"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/btnGuardar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/desc_guardar_tarea"
                android:focusable="true"
                android:padding="6dp"
                android:src="@drawable/ic_check_circle"
                app:layout_constraintBottom_toBottomOf="@id/etNombre"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:tint="#004D40" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:autofillHints="name"
                android:background="@drawable/bg_input_white"
                android:hint="@string/hint_nombre_ejemplo"
                android:inputType="textCapSentences"
                android:minHeight="48dp"
                android:paddingHorizontal="12dp"
                android:textColor="@color/black"
                android:textColorHint="#424242"
                app:layout_constraintEnd_toStartOf="@id/btnGuardar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblNombre"
                tools:ignore="VisualLintTextFieldSize" />

            <TextView
                android:id="@+id/lblFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_fecha_hora"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etNombre"/>

            <LinearLayout
                android:id="@+id/rowFechaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/lblFecha">

                <Spinner
                    android:id="@+id/spDiaInicio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_white"
                    android:minHeight="48dp"
                    tools:ignore="TouchTargetSizeCheck" />
                <Spinner android:id="@+id/spMesInicio" android:layout_width="0dp" android:layout_weight="1.5" android:layout_height="match_parent" android:minHeight="48dp" android:background="@drawable/bg_input_white" android:layout_marginEnd="4dp"/>
                <Spinner android:id="@+id/spAnoInicio" android:layout_width="0dp" android:layout_weight="1.3" android:layout_height="match_parent" android:minHeight="48dp" android:background="@drawable/bg_input_white" android:layout_marginEnd="8dp"/>

                <View android:layout_width="1dp" android:layout_height="48dp" android:background="#90A4AE" android:layout_marginEnd="8dp"/>

                <Spinner
                    android:id="@+id/spHoraInicio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_white"
                    android:minHeight="48dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Spinner
                    android:id="@+id/spMinInicio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_white"
                    android:minHeight="48dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Spinner
                    android:id="@+id/spAmPmInicio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_white"
                    android:minHeight="48dp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rowFechaFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/rowFechaInicio">

                <Spinner
                    android:id="@+id/spDiaFin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_white"
                    android:minHeight="48dp"
                    tools:ignore="TouchTargetSizeCheck" />
                <Spinner android:id="@+id/spMesFin" android:layout_width="0dp" android:layout_weight="1.5" android:layout_height="match_parent" android:minHeight="48dp" android:background="@drawable/bg_input_white" android:layout_marginEnd="4dp"/>
                <Spinner android:id="@+id/spAnoFin" android:layout_width="0dp" android:layout_weight="1.3" android:layout_height="match_parent" android:minHeight="48dp" android:background="@drawable/bg_input_white" android:layout_marginEnd="8dp"/>

                <View android:layout_width="1dp" android:layout_height="48dp" android:background="#90A4AE" android:layout_marginEnd="8dp"/>

                <Spinner
                    android:id="@+id/spHoraFin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_white"
                    android:minHeight="48dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Spinner
                    android:id="@+id/spMinFin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_white"
                    android:minHeight="48dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Spinner
                    android:id="@+id/spAmPmFin"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_input_white"
                    android:minHeight="48dp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_descripcion"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rowFechaFin"/>

            <EditText
                android:id="@+id/etDesc"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_input_white"
                android:layout_marginTop="8dp"
                android:padding="12dp"
                android:gravity="top|start"
                android:hint="@string/hint_detalles"
                android:textColor="@color/black"
                android:inputType="textMultiLine|textCapSentences"
                android:autofillHints="no"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblDesc"
                tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

            <TextView
                android:id="@+id/lblUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_ubicacion"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etDesc"/>

            <EditText
                android:id="@+id/etUbicacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints="postalAddress"
                android:hint="@string/barco_de_chanquete"
                android:background="@drawable/bg_input_white"
                android:inputType="textPostalAddress"
                android:minHeight="48dp"
                android:paddingHorizontal="12dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblUbicacion"
                tools:ignore="LabelFor,TextContrastCheck,VisualLintTextFieldSize,SpeakableTextPresentCheck" />

            <!-- SecciÃ³n Multimedia (Imagenes, Videos, Audio) -->
            <TextView
                android:id="@+id/lblMultimedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_multimedia"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etUbicacion"/>

            <LinearLayout
                android:id="@+id/layoutMultiOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/lblMultimedia">

                <LinearLayout
                    android:id="@+id/btnSelectImagen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/bg_input_white"
                    android:layout_marginEnd="4dp"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:contentDescription="@string/lbl_imagen"
                        app:tint="#004D40"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_imagen"
                        android:textSize="12sp"
                        android:textColor="#004D40"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSelectVideo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/bg_input_white"
                    android:layout_marginHorizontal="2dp"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_slideshow"
                        android:contentDescription="@string/lbl_video"
                        app:tint="#004D40"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_video"
                        android:textSize="12sp"
                        android:textColor="#004D40"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnSelectAudio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="@drawable/bg_input_white"
                    android:layout_marginStart="4dp"
                    android:clickable="true"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_btn_speak_now"
                        android:contentDescription="@string/lbl_audio"
                        app:tint="#004D40"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_audio"
                        android:textSize="12sp"
                        android:textColor="#004D40"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerPreviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/layoutMultiOptions">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/previewImagenLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/imgPreview"
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_input_white"
                        android:contentDescription="@string/desc_adjuntar_imagen"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView
                        android:id="@+id/btnRemoveImagen"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="4dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:background="@drawable/bg_rounded_mint"
                        android:contentDescription="@string/desc_quitar_imagen"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#B71C1C"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/previewVideoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="#F5F5F5"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/videoPreviewIcon"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:scaleType="center"
                        android:src="@android:drawable/ic_media_play"
                        android:contentDescription="@string/lbl_video"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tvVideoName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_video"
                        android:textColor="@color/black"
                        android:textStyle="italic"
                        app:layout_constraintTop_toBottomOf="@id/videoPreviewIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <ImageView
                        android:id="@+id/btnRemoveVideo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="4dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:background="@drawable/bg_rounded_mint"
                        android:contentDescription="@string/desc_quitar_video"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#B71C1C"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/previewAudioLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@drawable/bg_input_white"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/audioIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_btn_speak_now"
                        app:tint="#004D40"
                        android:contentDescription="@string/lbl_audio"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                    <TextView
                        android:id="@+id/tvAudioName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/lbl_audio"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toEndOf="@id/audioIcon"
                        app:layout_constraintEnd_toStartOf="@id/btnRemoveAudio"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constrainedWidth="true"/>
                    <ImageView
                        android:id="@+id/btnRemoveAudio"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:contentDescription="@string/desc_quitar_audio"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:tint="#B71C1C"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/lblNotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_notificacion"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/containerPreviews"/>

            <LinearLayout
                android:id="@+id/containerNotificaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/lblNotif">

                <include layout="@layout/item_notificacion"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btnAddNotif"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:src="@drawable/ic_add_circle_filled"
                app:tint="#004D40"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/desc_anadir_notificacion"
                app:layout_constraintTop_toBottomOf="@id/containerNotificaciones"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/lblColab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_anadir_colaborador"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnAddNotif"/>

            <LinearLayout
                android:id="@+id/containerColaboradores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/lblColab">

                <include layout="@layout/item_colaborador"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/btnAddColab"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:src="@drawable/ic_add_circle_filled"
                app:tint="#004D40"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/desc_anadir_colaborador"
                app:layout_constraintTop_toBottomOf="@id/containerColaboradores"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>