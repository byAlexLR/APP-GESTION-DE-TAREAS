<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="80dp"
    android:background="#E0F2F1">

    <TextView
        android:id="@+id/tvHoraSlot"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        tools:text="12 PM"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="top|center_horizontal"
        android:paddingTop="12dp"
        android:textSize="14sp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#B0BEC5"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTareaSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:id="@+id/layoutContenedorInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    tools:ignore="UseCompoundDrawables">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTituloTareaSlot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Título Tarea"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:ellipsize="end"
                            android:maxLines="1"/>

                        <TextView
                            android:id="@+id/tvUbiSlot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Sala de Juntas"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgArrowSlot"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="12dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="#00897B"
                        android:contentDescription="@string/desc_expandir_detalles"
                        tools:ignore="ImageContrastCheck" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutDetallesSlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginTop="4dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_descripcion"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvDescSlot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Descripción detallada..."
                        android:textColor="#455A64"
                        android:textSize="13sp"
                        android:layout_marginBottom="6dp"/>

                    <TextView
                        android:id="@+id/lblMultimediaItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/lbl_multimedia"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:id="@+id/scrollMultimedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:scrollbars="none">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="4dp"
                            tools:ignore="VisualLintBounds">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardAdjuntoImagen"
                                android:layout_width="118dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="25dp"
                                app:cardElevation="2dp"
                                app:cardBackgroundColor="#F1F8E9"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground">
                                <TextView
                                    android:id="@+id/tvNombreImagen"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="14dp"
                                    tools:text="Imagen"
                                    android:textSize="12sp"
                                    android:textColor="#1B5E20"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textStyle="bold"
                                    app:drawableStartCompat="@android:drawable/ic_menu_gallery"
                                    app:drawableTint="#2E7D32"
                                    android:drawablePadding="8dp"/>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardAdjuntoVideo"
                                android:layout_width="118dp"
                                android:layout_height="48dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="25dp"
                                app:cardElevation="2dp"
                                app:cardBackgroundColor="#E3F2FD"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground">
                                <TextView
                                    android:id="@+id/tvNombreVideo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="14dp"
                                    tools:text="Video"
                                    android:textSize="12sp"
                                    android:textColor="#0D47A1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textStyle="bold"
                                    app:drawableStartCompat="@android:drawable/ic_media_play"
                                    app:drawableTint="#1565C0"
                                    android:drawablePadding="8dp"/>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardAdjuntoAudio"
                                android:layout_width="118dp"
                                android:layout_height="48dp"
                                app:cardCornerRadius="25dp"
                                app:cardElevation="2dp"
                                app:cardBackgroundColor="#FFF3E0"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground">
                                <TextView
                                    android:id="@+id/tvNombreAudio"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:paddingHorizontal="14dp"
                                    tools:text="Audio"
                                    android:textSize="12sp"
                                    android:textColor="#BF360C"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textStyle="bold"
                                    app:drawableStartCompat="@android:drawable/ic_btn_speak_now"
                                    app:drawableTint="#EF6C00"
                                    android:drawablePadding="8dp"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/lblColaboradoresItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/lbl_colaboradores"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvColaboradoresBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="#455A64"
                        android:textSize="13sp"
                        tools:text="Juan, Maria" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="12dp">

                        <ImageView
                            android:id="@+id/btnEditarSlot"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="12dp"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="#455A64"
                            android:layout_marginEnd="4dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="@string/desc_editar_tarea"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/btnCompartirSlot"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="12dp"
                            android:src="@android:drawable/ic_menu_share"
                            app:tint="#455A64"
                            android:layout_marginEnd="4dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="@string/desc_compartir_tarea"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/btnMenuSlot"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:padding="12dp"
                            android:src="@android:drawable/ic_menu_more"
                            app:tint="#455A64"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="@string/desc_opciones_tarea"
                            tools:ignore="ImageContrastCheck" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/lineaSeparadoraFondo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CFD8DC"
            android:layout_gravity="bottom"/>
    </FrameLayout>
</LinearLayout>